<MainSreenManager>:
    Screen:
        name: 'home_screen'
        MDBottomNavigation:
            panel_color: 1, 1, 1, 1
            on_current: print(self.current)
            MDBottomNavigationItem:
                name: 'home'
                icon: 'home'
                HomeMainScreen:
                    name: 'home_screen'

            MDBottomNavigationItem:
                name: 'screen_2'
                icon: 'magnify'
                Screen:
                    name: 'other_screen'
                    MDLabel:
                        text: 'Screen 2'
                        halign: 'center'

            MDBottomNavigationItem:
                name: 'screen_3'
                icon: 'heart-outline'
                Screen:
                    name: 'other_screen3'
                    MDLabel:
                        text: 'Screen 3'
                        halign: 'center'

            MDBottomNavigationItem:
                name: 'screen_4'
                icon: 'cog-outline'
                Screen:
                    name: 'other_screen4'
                    MDLabel:
                        text: 'Screen 4'
                        halign: 'center'
